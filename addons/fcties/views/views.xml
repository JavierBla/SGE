    <record model="ir.ui.view" id="fcties.alumno_form">
      <field name="name">fcties.alumno.form</field>
      <field name="model">fcties.alumno</field>
      <field name="arch" type="xml">
        <form>
          <group colspan="2" col="2">
            <field name="name"/>
            <field name="apellidos"/>
            <field name="fechaNacimiento"/>
            <field name="cursoAcademico"/>
            <field name="email"/>
            <field name="telefono"/>
            <field name="ciclo"/>
            <field name="periodo"/>
            <field name="notaMedia"/>
            <field name="notaTexto"/>
            <field name="empresa"/>
          </group>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="fcties.alumno_tree">
      <field name="name">fcties.alumno.tree</field>
      <field name="model">fcties.alumno</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="apellidos"/>
          <field name="cursoAcademico"/>
          <field name="periodo"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="fcties.alumno_search">
      <field name="name">fcties.alumno.search</field>
      <field name="model">fcties.alumno</field>
      <field name="arch" type="xml">
        <search string="Alumnos">
          <field name="apellidos"/>
          <field name="empresa"/>
          <field name="ciclo"/>
          <field name="periodo"/>
          <filter name="Nota Media Mayor de 8" domain="[('notaMedia', '&gt;', 8)]"/>
        </search>
      </field>
    </record>

    <record model="ir.ui.view" id="fcties.empresa_form">
      <field name="name">fcties.empresa.form</field>
      <field name="model">fcties.empresa</field>
      <field name="arch" type="xml">
        <form>
          <group colspan="2" col="2">
            <field name="name"/>
            <field name="pContacto"/>
            <field name="tContacto"/>
            <field name="email"/>
            <field name="direccion"/>
            <field name="alumnos"/>
          </group>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="fcties.empresa_tree">
      <field name="name">fcties.empresa.tree</field>
      <field name="model">fcties.empresa</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="pContacto"/>
          <field name="tContacto"/>
          <field name="email"/>
          <field name="direccion"/>
        </tree>
      </field>
    </record>
